{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "objectWrap": "preserve",
  "printWidth": 100,
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 4,
  "trailingComma": "none",
  "useTabs": true,
  "overrides": [
    {
      "files": "*.{yml,json}",
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    }
  ]
}
